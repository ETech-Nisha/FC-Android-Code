        <activity
            android:name="com.fractal.chaoss.manager.home.PermissionAccept"
            android:screenOrientation="locked"
            android:theme="@style/AppThemeHome"></activity>


        <activity
            android:name="com.fractal.chaoss.SplashActivity"
            android:screenOrientation="locked"
            android:theme="@style/AppThemeData">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.fractal.chaoss.manager.home.MainActivity"
            android:screenOrientation="locked"
            android:theme="@style/AppThemeHome"></activity>

        <activity
            android:name="com.fractal.chaoss.manager.detail.DetailActivity"
            android:screenOrientation="locked"
            android:theme="@style/AppThemeDetail" />
        <activity
            android:name="com.fractal.chaoss.manager.alldata.AllActivity"
            android:screenOrientation="locked"
            android:theme="@style/AppThemeHome" />

        <service
            android:name="com.fractal.chaoss.notification.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/home_logo" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/black" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="01" />
        <meta-data
            android:name="firebase_messaging_auto_init_enabled"
            android:value="false" />
        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="false" />
    </application>

